<resources>
    <style name="MainActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="EditPreferencesTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white_24dp</item>
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="CustomActionBarStyle" parent="android:Widget.Holo.ActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
    </style>

    <style name="greenProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="redProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_horizontal_red</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
</resources>
